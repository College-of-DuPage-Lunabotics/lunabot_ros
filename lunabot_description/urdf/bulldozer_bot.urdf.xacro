<?xml version="1.0"?>
<robot name="bulldozer_bot"
  xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:arg name="use_sim" default="true" />

  <material name="camera_grey">
    <color rgba="0.81 0.81 0.81 1.0" />
  </material>

  <material name="black">
    <color rgba="0.22 0.22 0.22 1.0" />
  </material>

  <xacro:if value="$(arg use_sim)">
    <xacro:property name="camera_sim_link_offset" value="0.015" />
    <xacro:property name="camera_sim_joint_offset" value="0" />
  </xacro:if>
  <xacro:unless value="$(arg use_sim)">
    <xacro:property name="camera_sim_link_offset" value="0.15" />
    <xacro:property name="camera_sim_joint_offset" value="0.15" />
  </xacro:unless>

  <!-- ================================= -->
  <!--            BODY LINKS             -->
  <!-- ================================= -->

  <link name="base_link">
    <visual>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_body.dae" />
      </geometry>
      <origin xyz="0 0 0.1625" rpy="0 0 1.5708" />
    </visual>
    <collision>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_body.stl" />
      </geometry>
      <origin xyz="0 0 0.1625" rpy="0 0 1.5708" />
    </collision>
    <inertial>
      <mass value="25.0" />
      <origin xyz="0 0 0.1625" />
      <inertia ixx="1.3669" ixy="0.0" ixz="0.0" iyy="3.3602" iyz="0.0" izz="4.7271" />
    </inertial>
  </link>

  <link name="blade_link">
    <visual>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_blade.dae" />
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 1.5708" />
    </visual>
    <collision>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_blade.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 1.5708" />
    </collision>
    <inertial>
      <mass value="5.0" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0833" ixy="0.0" ixz="0.0" iyy="0.1667" iyz="0.0" izz="0.2333" />
    </inertial>
  </link>

  <link name="blade_arm_link">
    <visual>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_blade_arm.dae" />
      </geometry>
      <origin xyz="0.127 0 0" rpy="-1.5708 0 1.5708" />
    </visual>
    <collision>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_blade_arm.stl" />
      </geometry>
      <origin xyz="0.127 0 0" rpy="-1.5708 0 1.5708" />
    </collision>
    <inertial>
      <mass value="5.0" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0833" ixy="0.0" ixz="0.0" iyy="0.1667" iyz="0.0" izz="0.2333" />
    </inertial>
  </link>

  <!-- ================================= -->
  <!--           SENSOR LINKS            -->
  <!-- ================================= -->

  <link name="oak_d_link">
    <visual>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_oak_d_camera.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_oak_d_camera.stl" />
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0" />
    </collision>
  </link>

  <link name="oak_d_optical_link"></link>

  <link name="d456_link">
    <visual>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_d456_camera.stl" />
      </geometry>
      <origin xyz="0 -${camera_sim_link_offset} 0" rpy="0 0 0" />
      <material name="camera_grey" />
    </visual>
    <collision>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_d456_camera.stl" />
      </geometry>
      <origin xyz="0 -${camera_sim_link_offset} 0" rpy="0 0 0" />
    </collision>
  </link>

  <link name="d456_optical_link"></link>

  <link name="d455_link">
    <visual>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_d455_camera.stl" />
      </geometry>
      <origin xyz="0 -${camera_sim_link_offset} 0" rpy="0 0 0" />
      <material name="camera_grey" />
    </visual>
    <collision>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_d455_camera.stl" />
      </geometry>
      <origin xyz="0 -${camera_sim_link_offset} 0" rpy="0 0 0" />
    </collision>
  </link>

  <link name="d455_optical_link"></link>

  <link name="s3_lidar_link">
    <visual>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_s3_lidar.stl" />
      </geometry>
      <origin xyz="0 -0.0155 0" rpy="0 0 -1.5708" />
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_s3_lidar.stl" />
      </geometry>
      <origin xyz="0 -0.0155 0" rpy="0 0 -1.5708" />
    </collision>
  </link>

  <link name="s2l_lidar_link">
    <visual>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_s2l_lidar.stl" />
      </geometry>
      <origin xyz="0 -0.015 0" rpy="0 3.14 -1.5708" />
      <material name="black" />
    </visual>
    <collision>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/bulldozer_bot/bulldozer_bot_s2l_lidar.stl" />
      </geometry>
      <origin xyz="0 -0.015 0" rpy="0 0 -1.5708" />
    </collision>
  </link>

  <link name="imu_link"></link>

  <!-- ================================= -->
  <!--            WHEEL LINKS            -->
  <!-- ================================= -->

  <link name="front_right_wheel_link">
    <inertial>
      <mass value="2.27" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0255" ixy="0.0" ixz="0.0" iyy="0.0255" iyz="0.0" izz="0.0510" />
    </inertial>
    <collision>
      <geometry>
        <cylinder length="0.127" radius="0.1016" />
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0" />
    </collision>
  </link>

  <link name="front_left_wheel_link">
    <inertial>
      <mass value="2.27" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0255" ixy="0.0" ixz="0.0" iyy="0.0255" iyz="0.0" izz="0.0510" />
    </inertial>
    <collision>
      <geometry>
        <cylinder length="0.127" radius="0.1016" />
      </geometry>
      <origin xyz="0 0 0" rpy="-1.5708 0 0" />
    </collision>
  </link>

  <link name="rear_right_wheel_link">
    <inertial>
      <mass value="2.27" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0255" ixy="0.0" ixz="0.0" iyy="0.0255" iyz="0.0" izz="0.0510" />
    </inertial>
    <collision>
      <geometry>
        <cylinder length="0.127" radius="0.1016" />
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0" />
    </collision>
  </link>

  <link name="rear_left_wheel_link">
    <inertial>
      <mass value="2.27" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0255" ixy="0.0" ixz="0.0" iyy="0.0255" iyz="0.0" izz="0.0510" />
    </inertial>
    <collision>
      <geometry>
        <cylinder length="0.127" radius="0.1016" />
      </geometry>
      <origin xyz="0 0 0" rpy="-1.5708 0 0" />
    </collision>
  </link>

  <!-- ================================= -->
  <!--            BODY JOINTS            -->
  <!-- ================================= -->

  <joint name="base_blade_arm_joint" type="revolute">
    <parent link="base_link" />
    <child link="blade_arm_link" />
    <origin xyz="-0.1553 -0.0165 0.2424" rpy="0 0 3.14" />
    <axis xyz="0 1 0" />
    <limit effort="100" velocity="1.0" lower="-0.75" upper="0.75" />
    <dynamics damping="0.0" friction="0.0" />
  </joint>

  <joint name="blade_arm_joint" type="revolute">
    <parent link="blade_arm_link" />
    <child link="blade_link" />
    <origin xyz="0.22061 0.0 0.01284" rpy="0 0 3.14" />
    <axis xyz="0 1 0" />
    <limit effort="100" velocity="1.0" lower="-0.75" upper="0.75" />
    <dynamics damping="0.0" friction="0.0" />
  </joint>

  <!-- ================================= -->
  <!--           SENSOR JOINTS           -->
  <!-- ================================= -->

  <joint name="base_oak_d_joint" type="fixed">
    <parent link="base_link" />
    <child link="oak_d_link" />
    <origin xyz="-0.128 0 0.5762" rpy="0 0.785398 3.14" />
  </joint>

  <joint name="oak_d_optical_joint" type="fixed">
    <parent link="oak_d_link" />
    <child link="oak_d_optical_link" />
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708" />
  </joint>

  <joint name="base_d455_joint" type="fixed">
    <parent link="base_link" />
    <child link="d455_link" />
    <origin xyz="-0.128 -${camera_sim_joint_offset} 0.5" rpy="0 0 3.14" />
  </joint>

  <joint name="d455_optical_joint" type="fixed">
    <parent link="d455_link" />
    <child link="d455_optical_link" />
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708" />
  </joint>

  <joint name="base_d456_joint" type="fixed">
    <parent link="base_link" />
    <child link="d456_link" />
    <origin xyz="-0.0555 ${camera_sim_joint_offset} 0.5762" rpy="0 0.523599 0" />
  </joint>

  <joint name="d456_optical_joint" type="fixed">
    <parent link="d456_link" />
    <child link="d456_optical_link" />
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708" />
  </joint>

  <joint name="base_s3_lidar_joint" type="fixed">
    <parent link="base_link" />
    <child link="s3_lidar_link" />
    <origin xyz="-0.09025 0 0.6" rpy="0 0 0" />
  </joint>

  <joint name="base_s2l_lidar_joint" type="fixed">
    <parent link="base_link" />
    <child link="s2l_lidar_link" />
    <origin xyz="0.26 0 0.175" rpy="0 0 0" />
  </joint>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link" />
    <child link="imu_link" />
    <origin xyz="0 0 0" rpy="3.14159 0 -1.57" />
  </joint>

  <!-- ================================= -->
  <!--            WHEEL JOINTS           -->
  <!-- ================================= -->

  <joint name="base_rear_right_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="rear_right_wheel_link" />
    <origin xyz="-0.235 -0.25 0.08" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="base_rear_left_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="rear_left_wheel_link" />
    <origin xyz="-0.235 0.25 0.08" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="base_front_right_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="front_right_wheel_link" />
    <origin xyz="0.215 -0.25 0.08" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="base_front_left_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="front_left_wheel_link" />
    <origin xyz="0.215 0.25 0.08" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <!-- ================================= -->
  <!--       GAZEBO CONFIGURATION        -->
  <!-- ================================= -->

  <xacro:if value="$(arg use_sim)">
    <gazebo reference="front_right_wheel_link">
      <material>Gazebo/Grey</material>
      <mu>1.0</mu>
      <mu2>1.0</mu2>
      <surface>
        <contact>
          <ode>
            <kp>1000000</kp>
            <kd>500</kd>
            <slip1>0.015</slip1>
            <slip2>0.015</slip2>
          </ode>
        </contact>
      </surface>
    </gazebo>

    <gazebo reference="front_left_wheel_link">
      <material>Gazebo/Grey</material>
      <mu>1.0</mu>
      <mu2>1.0</mu2>
      <surface>
        <contact>
          <ode>
            <kp>1000000</kp>
            <kd>500</kd>
            <slip1>0.015</slip1>
            <slip2>0.015</slip2>
          </ode>
        </contact>
      </surface>
    </gazebo>

    <gazebo reference="rear_right_wheel_link">
      <material>Gazebo/Grey</material>
      <mu>1.0</mu>
      <mu2>1.0</mu2>
      <surface>
        <contact>
          <ode>
            <kp>1000000</kp>
            <kd>500</kd>
            <slip1>0.015</slip1>
            <slip2>0.015</slip2>
          </ode>
        </contact>
      </surface>
    </gazebo>

    <gazebo reference="rear_left_wheel_link">
      <material>Gazebo/Grey</material>
      <mu>1.0</mu>
      <mu2>1.0</mu2>
      <surface>
        <contact>
          <ode>
            <kp>1000000</kp>
            <kd>500</kd>
            <slip1>0.015</slip1>
            <slip2>0.015</slip2>
          </ode>
        </contact>
      </surface>
    </gazebo>

    <gazebo reference="oak_d_link">
      <sensor type="depth" name="oak_d">
        <pose>0 0 0 0 0 0</pose>
        <update_rate>60.0</update_rate>
        <visualize>true</visualize>
        <camera>
          <horizontal_fov>1.434</horizontal_fov>
          <image>
            <width>640</width>
            <height>360</height>
            <format>R8G8B8</format>
          </image>
          <distortion>
            <k1>-0.06792929080519726</k1>
            <k2>0.08058277259698843</k2>
            <k3>-0.04417756393089296</k3>
            <p1>-0.001690544521662593</p1>
            <p2>-0.0008235437909836152</p2>
          </distortion>
          <clip>
            <near>0.05</near>
            <far>10.0</far>
          </clip>
        </camera>
        <plugin name="oak_d_controller" filename="libgazebo_ros_camera.so">
          <ros>
            <remapping>/oak_d/image_raw:=/oak_d/color/image_raw</remapping>
            <remapping>/oak_d/points:=/oak_d/color/points</remapping>
            <remapping>/oak_d/camera_info:=/oak_d/color/camera_info</remapping>
            <remapping>/oak_d/depth/image_raw:=/oak_d/depth/image_rect_raw</remapping>
          </ros>
          <frame_name>oak_d_optical_link</frame_name>
          <publish_tf>false</publish_tf>
          <publish_point_cloud>true</publish_point_cloud>
        </plugin>
      </sensor>
      <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="d456_link">
      <sensor type="depth" name="d456">
        <pose>0 0 0 0 0 0</pose>
        <update_rate>60.0</update_rate>
        <visualize>true</visualize>
        <camera>
          <horizontal_fov>1.434</horizontal_fov>
          <image>
            <width>640</width>
            <height>360</height>
            <format>R8G8B8</format>
          </image>
          <distortion>
            <k1>-0.06792929080519726</k1>
            <k2>0.08058277259698843</k2>
            <k3>-0.04417756393089296</k3>
            <p1>-0.001690544521662593</p1>
            <p2>-0.0008235437909836152</p2>
          </distortion>
          <clip>
            <near>0.05</near>
            <far>10.0</far>
          </clip>
        </camera>
        <plugin name="d456_controller" filename="libgazebo_ros_camera.so">
          <ros>
            <remapping>/d456/image_raw:=/d456/color/image_raw</remapping>
            <remapping>/d456/points:=/d456/color/points</remapping>
            <remapping>/d456/camera_info:=/d456/color/camera_info</remapping>
            <remapping>/d456/depth/image_raw:=/d456/depth/image_rect_raw</remapping>
          </ros>
          <frame_name>d456_optical_link</frame_name>
          <publish_tf>false</publish_tf>
          <publish_point_cloud>true</publish_point_cloud>
        </plugin>
      </sensor>
      <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="d455_link">
      <sensor type="depth" name="d455">
        <pose>0 0 0 0 0 0</pose>
        <update_rate>60.0</update_rate>
        <visualize>true</visualize>
        <camera>
          <horizontal_fov>1.540</horizontal_fov>
          <image>
            <width>640</width>
            <height>360</height>
            <format>R8G8B8</format>
          </image>
          <distortion>
            <k1>-0.06792929080519726</k1>
            <k2>0.08058277259698843</k2>
            <k3>-0.04417756393089296</k3>
            <p1>-0.001690544521662593</p1>
            <p2>-0.0008235437909836152</p2>
          </distortion>
          <clip>
            <near>0.05</near>
            <far>10.0</far>
          </clip>
        </camera>
        <plugin name="d455_controller" filename="libgazebo_ros_camera.so">
          <ros>
            <remapping>/d455/image_raw:=/d455/color/image_raw</remapping>
            <remapping>/d455/points:=/d455/color/points</remapping>
            <remapping>/d455/camera_info:=/d455/color/camera_info</remapping>
            <remapping>/d455/depth/image_raw:=/d455/depth/image_rect_raw</remapping>
          </ros>
          <frame_name>d455_optical_link</frame_name>
          <publish_tf>false</publish_tf>
          <publish_point_cloud>true</publish_point_cloud>
        </plugin>
      </sensor>
      <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="s3_lidar_link">
      <sensor type="ray" name="s3_lidar_link">
        <pose>0 0 0 0 0 0</pose>
        <visualize>false</visualize>
        <update_rate>20.0</update_rate>
        <ray>
          <scan>
            <horizontal>
              <samples>1080</samples>
              <resolution>0.5</resolution>
              <min_angle>-3.14</min_angle>
              <max_angle>3.14</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>10.0</max>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>
        <plugin name="s3_lidar_controller" filename="libgazebo_ros_ray_sensor.so">
          <frame_name>s3_lidar_link</frame_name>
          <ros>
            <remapping>~/out:=/scan_raw</remapping>
          </ros>
          <output_type>sensor_msgs/LaserScan</output_type>
          <publish_tf>false</publish_tf>
        </plugin>
      </sensor>
      <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="s2l_lidar_link">
      <sensor type="ray" name="s2l_lidar_link">
        <pose>0 0 0 0 0 0</pose>
        <visualize>false</visualize>
        <update_rate>20.0</update_rate>
        <ray>
          <scan>
            <horizontal>
              <samples>1080</samples>
              <resolution>0.5</resolution>
              <min_angle>-3.14</min_angle>
              <max_angle>3.14</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>10.0</max>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>
        <plugin name="s2l_lidar_controller" filename="libgazebo_ros_ray_sensor.so">
          <frame_name>s2l_lidar_link</frame_name>
          <ros>
            <remapping>~/out:=/scan2_raw</remapping>
          </ros>
          <output_type>sensor_msgs/LaserScan</output_type>
          <publish_tf>false</publish_tf>
        </plugin>
      </sensor>
      <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="imu_link">
      <gravity>false</gravity>
      <sensor name="imu_sensor" type="imu">
        <always_on>true</always_on>
        <update_rate>200</update_rate>
        <visualize>true</visualize>
        <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
          <ros>
            <namespace></namespace>
            <remapping>~/out:=/d456/imu/data</remapping>
          </ros>
          <bodyName>base_link</bodyName>
          <gaussianNoise>0.0</gaussianNoise>
          <xyzOffset>0 0 0</xyzOffset>
          <rpyOffset>0 0 0</rpyOffset>
          <frameName>imu_link</frameName>
          <publish_tf>false</publish_tf>
          <initialOrientationAsReference>false</initialOrientationAsReference>
        </plugin>
        <pose>0 0 0 0 0 0</pose>
      </sensor>
    </gazebo>

    <gazebo>
