<?xml version="1.0"?>
<robot name="v2_bot"
  xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:arg name="use_sim" default="true" />

  <material name="camera_grey">
    <color rgba="0.81 0.81 0.81 1.0" />
  </material>

  <material name="black">
    <color rgba="0.22 0.22 0.22 1.0" />
  </material>

  <xacro:if value="$(arg use_sim)">
    <xacro:property name="camera_sim_link_offset" value="0.01" />
    <xacro:property name="camera_sim_joint_offset" value="0" />
  </xacro:if>
  <xacro:unless value="$(arg use_sim)">
    <xacro:property name="camera_sim_link_offset" value="0" />
    <xacro:property name="camera_sim_joint_offset" value="0" />
  </xacro:unless>

  <!-- ================================= -->
  <!--            BODY LINKS             -->
  <!-- ================================= -->

  <link name="base_link">
    <visual>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/v2_bot/v2_bot_body.dae" />
      </geometry>
      <origin xyz="0 0 0.1625" rpy="0 0 1.5708" />
    </visual>
    <collision>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/v2_bot/v2_bot_body.stl" />
      </geometry>
      <origin xyz="0 0 0.1625" rpy="0 0 1.5708" />
    </collision>
    <inertial>
      <mass value="25.0" />
      <origin xyz="0 0 0.1625" />
      <inertia ixx="1.3669" ixy="0.0" ixz="0.0" iyy="3.3602" iyz="0.0" izz="4.7271" />
    </inertial>
  </link>

  <link name="bucket_link">
    <visual>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/v2_bot/v2_bot_bucket.dae" />
      </geometry>
      <origin xyz="0.2 0 0" rpy="1.5708 0 1.5708" />
    </visual>
    <!-- <collision>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/v2_bot/v2_bot_bucket.stl" />
      </geometry>
      <origin xyz="0.2 0 0" rpy="1.5708 0 1.5708" />
    </collision> -->
    <inertial>
      <mass value="3.0" />
      <origin xyz="0.2 0 0" />
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05" />
    </inertial>
  </link>

  <!-- ================================= -->
  <!--           SENSOR LINKS            -->
  <!-- ================================= -->

  <link name="camera_front_link">
    <visual>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/v2_bot/v2_bot_d456_camera.stl" />
      </geometry>
      <origin xyz="0 -${camera_sim_link_offset} 0" rpy="0 0 0" />
      <material name="camera_grey" />
    </visual>
    <collision>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/v2_bot/v2_bot_d456_camera.stl" />
      </geometry>
      <origin xyz="0 -${camera_sim_link_offset} 0" rpy="0 0 0" />
    </collision>
  </link>

  <link name="camera_front_optical_link"></link>

  <link name="camera_back_link">
    <visual>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/v2_bot/v2_bot_d456_camera.stl" />
      </geometry>
      <origin xyz="0 -${camera_sim_link_offset} 0" rpy="0 0 0" />
      <material name="camera_grey" />
    </visual>
    <collision>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/v2_bot/v2_bot_d456_camera.stl" />
      </geometry>
      <origin xyz="0 -${camera_sim_link_offset} 0" rpy="0 0 0" />
    </collision>
  </link>

  <link name="camera_back_optical_link"></link>

  <link name="mid360_lidar_link">
    <visual>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/v2_bot/v2_bot_mid360_lidar.dae" />
      </geometry>
      <material name="camera_grey" />
    </visual>
    <collision>
      <geometry>
        <mesh
          filename="file:///$(find lunabot_description)/meshes/v2_bot/v2_bot_mid360_lidar.stl" />
      </geometry>
    </collision>
  </link>

  <link name="mid360_imu_link"></link>

  <!-- ================================= -->
  <!--            WHEEL LINKS            -->
  <!-- ================================= -->

  <link name="front_right_wheel_link">
    <inertial>
      <mass value="2.27" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0255" ixy="0.0" ixz="0.0" iyy="0.0255" iyz="0.0" izz="0.0510" />
    </inertial>
    <collision>
      <geometry>
        <cylinder length="0.127" radius="0.1016" />
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0" />
    </collision>
  </link>

  <link name="front_left_wheel_link">
    <inertial>
      <mass value="2.27" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0255" ixy="0.0" ixz="0.0" iyy="0.0255" iyz="0.0" izz="0.0510" />
    </inertial>
    <collision>
      <geometry>
        <cylinder length="0.127" radius="0.1016" />
      </geometry>
      <origin xyz="0 0 0" rpy="-1.5708 0 0" />
    </collision>
  </link>

  <link name="rear_right_wheel_link">
    <inertial>
      <mass value="2.27" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0255" ixy="0.0" ixz="0.0" iyy="0.0255" iyz="0.0" izz="0.0510" />
    </inertial>
    <collision>
      <geometry>
        <cylinder length="0.127" radius="0.1016" />
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0" />
    </collision>
  </link>

  <link name="rear_left_wheel_link">
    <inertial>
      <mass value="2.27" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.0255" ixy="0.0" ixz="0.0" iyy="0.0255" iyz="0.0" izz="0.0510" />
    </inertial>
    <collision>
      <geometry>
        <cylinder length="0.127" radius="0.1016" />
      </geometry>
      <origin xyz="0 0 0" rpy="-1.5708 0 0" />
    </collision>
  </link>

  <!-- ================================= -->
  <!--           SENSOR JOINTS           -->
  <!-- ================================= -->

  <joint name="base_camera_front_joint" type="fixed">
    <parent link="base_link" />
    <child link="camera_front_link" />
    <origin xyz="0.55 0 0.425" rpy="0 0.523599 0" />
  </joint>

  <joint name="camera_front_optical_joint" type="fixed">
    <parent link="camera_front_link" />
    <child link="camera_front_optical_link" />
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708" />
  </joint>

  <joint name="base_camera_back_joint" type="fixed">
    <parent link="base_link" />
    <child link="camera_back_link" />
    <origin xyz="-0.324 0 0.564" rpy="0 0.785398 3.14" />
  </joint>

  <joint name="camera_back_optical_joint" type="fixed">
    <parent link="camera_back_link" />
    <child link="camera_back_optical_link" />
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708" />
  </joint>

  <joint name="base_mid360_joint" type="fixed">
    <parent link="base_link" />
    <child link="mid360_lidar_link" />
    <origin xyz="-0.27 0 0.548" rpy="3.14159 0 0" />
  </joint>

  <joint name="mid360_imu_joint" type="fixed">
    <parent link="base_link" />
    <child link="mid360_imu_link" />
    <origin xyz="-0.27 0 0.548" rpy="3.14159 0 0" />
  </joint>

  <!-- ================================= -->
  <!--          BUCKET JOINT             -->
  <!-- ================================= -->

  <joint name="base_bucket_joint" type="revolute">
    <parent link="base_link" />
    <child link="bucket_link" />
    <origin xyz="-0.15 0 0.2" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <limit effort="100" velocity="0.3" lower="-1.57" upper="0.1" />
    <dynamics damping="0.0" friction="0.0" />
  </joint>

  <!-- ================================= -->
  <!--            WHEEL JOINTS           -->
  <!-- ================================= -->

  <joint name="base_rear_right_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="rear_right_wheel_link" />
    <origin xyz="-0.235 -0.25 0.08" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="base_rear_left_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="rear_left_wheel_link" />
    <origin xyz="-0.235 0.25 0.08" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="base_front_right_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="front_right_wheel_link" />
    <origin xyz="0.215 -0.25 0.08" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="base_front_left_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="front_left_wheel_link" />
    <origin xyz="0.215 0.25 0.08" rpy="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <!-- ================================= -->
  <!--       GAZEBO CONFIGURATION        -->
  <!-- ================================= -->

  <xacro:if value="$(arg use_sim)">
    <gazebo reference="front_right_wheel_link">
      <material>Gazebo/Grey</material>
      <mu>1.0</mu>
      <mu2>1.0</mu2>
      <surface>
        <contact>
          <ode>
            <kp>1000000</kp>
            <kd>500</kd>
            <slip1>0.015</slip1>
            <slip2>0.015</slip2>
          </ode>
        </contact>
      </surface>
    </gazebo>

    <gazebo reference="front_left_wheel_link">
      <material>Gazebo/Grey</material>
      <mu>1.0</mu>
      <mu2>1.0</mu2>
      <surface>
        <contact>
          <ode>
            <kp>1000000</kp>
            <kd>500</kd>
            <slip1>0.015</slip1>
            <slip2>0.015</slip2>
          </ode>
        </contact>
      </surface>
    </gazebo>

    <gazebo reference="rear_right_wheel_link">
      <material>Gazebo/Grey</material>
      <mu>1.0</mu>
      <mu2>1.0</mu2>
      <surface>
        <contact>
          <ode>
            <kp>1000000</kp>
            <kd>500</kd>
            <slip1>0.015</slip1>
            <slip2>0.015</slip2>
          </ode>
        </contact>
      </surface>
    </gazebo>

    <gazebo reference="rear_left_wheel_link">
      <material>Gazebo/Grey</material>
      <mu>1.0</mu>
      <mu2>1.0</mu2>
      <surface>
        <contact>
          <ode>
            <kp>1000000</kp>
            <kd>500</kd>
            <slip1>0.015</slip1>
            <slip2>0.015</slip2>
          </ode>
        </contact>
      </surface>
    </gazebo>

    <gazebo reference="camera_front_link">
      <sensor type="depth" name="camera_front">
        <pose>0 0 0 0 0 0</pose>
        <update_rate>60.0</update_rate>
        <visualize>false</visualize>
        <camera>
          <horizontal_fov>1.540</horizontal_fov>
          <image>
            <width>640</width>
            <height>360</height>
            <format>R8G8B8</format>
          </image>
          <distortion>
            <k1>0.0</k1>
            <k2>0.0</k2>
            <k3>0.0</k3>
            <p1>0.0</p1>
            <p2>0.0</p2>
          </distortion>
          <clip>
            <near>0.05</near>
            <far>10.0</far>
          </clip>
        </camera>
        <plugin name="camera_front_controller" filename="libgazebo_ros_camera.so">
          <ros>
            <remapping>/camera_front/image_raw:=/camera_front/color/image_raw</remapping>
            <remapping>/camera_front/points:=/camera_front/color/points</remapping>
            <remapping>/camera_front/camera_info:=/camera_front/color/camera_info</remapping>
            <remapping>/camera_front/depth/image_raw:=/camera_front/depth/image_rect_raw</remapping>
          </ros>
          <frame_name>camera_front_optical_link</frame_name>
          <publish_tf>false</publish_tf>
          <publish_point_cloud>true</publish_point_cloud>
        </plugin>
      </sensor>
      <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="camera_back_link">
      <sensor type="depth" name="camera_back">
        <pose>0 0 0 0 0 0</pose>
        <update_rate>60.0</update_rate>
        <visualize>false</visualize>
        <camera>
          <horizontal_fov>1.540</horizontal_fov>
          <image>
            <width>640</width>
            <height>360</height>
            <format>R8G8B8</format>
          </image>
          <distortion>
            <k1>0.0</k1>
            <k2>0.0</k2>
            <k3>0.0</k3>
            <p1>0.0</p1>
            <p2>0.0</p2>
          </distortion>
          <clip>
            <near>0.05</near>
            <far>10.0</far>
          </clip>
        </camera>
        <plugin name="camera_back_controller" filename="libgazebo_ros_camera.so">
          <ros>
            <remapping>/camera_back/image_raw:=/camera_back/color/image_raw</remapping>
            <remapping>/camera_back/points:=/camera_back/color/points</remapping>
            <remapping>/camera_back/camera_info:=/camera_back/color/camera_info</remapping>
            <remapping>/camera_back/depth/image_raw:=/camera_back/depth/image_rect_raw</remapping>
          </ros>
          <frame_name>camera_back_optical_link</frame_name>
          <publish_tf>false</publish_tf>
          <publish_point_cloud>true</publish_point_cloud>
        </plugin>
      </sensor>
      <material>Gazebo/Grey</material>
    </gazebo>

    <gazebo reference="mid360_lidar_link">
      <sensor type="ray" name="mid360_lidar_link">
        <always_on>true</always_on>
        <pose>0 0 0 0 0 0</pose>
        <visualize>false</visualize>
        <update_rate>10</update_rate>
        <plugin name="mid360_plugin" filename="libros2_livox.so">
          <ray>
            <scan>
              <horizontal>
                <samples>100</samples>
                <resolution>1</resolution>
                <min_angle>0</min_angle>
                <max_angle>6.2831852</max_angle>
              </horizontal>
              <vertical>
                <samples>360</samples>
                <resolution>1</resolution>
                <min_angle>-0.126</min_angle>
                <max_angle>0.964</max_angle>
              </vertical>
            </scan>
            <range>
              <min>0.1</min>
              <max>50.0</max>
              <resolution>0.002</resolution>
            </range>
            <noise>
              <type>gaussian</type>
              <mean>0.0</mean>
              <stddev>0.01</stddev>
            </noise>
          </ray>
          <visualize>false</visualize>
          <samples>20000</samples>
          <downsample>2</downsample>
          <csv_file_name>$(find ros2_livox_simulation)/scan_mode/mid360.csv</csv_file_name>
          <topic>livox/lidar</topic>
        </plugin>
      </sensor>
    </gazebo>

    <gazebo reference="mid360_imu_link">
      <gravity>false</gravity>
      <sensor name="imu_sensor" type="imu">
        <always_on>true</always_on>
        <update_rate>100</update_rate>
        <visualize>true</visualize>
        <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
          <ros>
            <namespace></namespace>
            <remapping>~/out:=/livox/imu</remapping>
          </ros>
          <bodyName>mid360_imu_link</bodyName>
          <gaussianNoise>0.01</gaussianNoise>
          <xyzOffset>0 0 0</xyzOffset>
          <rpyOffset>0 0 0</rpyOffset>
          <frameName>mid360_imu_link</frameName>
          <publish_tf>false</publish_tf>
          <initialOrientationAsReference>false</initialOrientationAsReference>
        </plugin>
        <pose>0 0 0 0 0 0</pose>
      </sensor>
    </gazebo>

    <gazebo>
      <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
        <robot_param>robot_description</robot_param>
        <robot_param_node>robot_state_publisher</robot_param_node>
        <parameters>$(find lunabot_config)/params/gazebo/gazebo_v2_bot_params.yaml</parameters>
      </plugin>
    </gazebo>

    <ros2_control name="GazeboSystem" type="system">
      <hardware>
        <plugin>gazebo_ros2_control/GazeboSystem</plugin>
      </hardware>
      <joint name="base_front_right_wheel_joint">
        <command_interface name="velocity">
          <param name="min">-1</param>
          <param name="max">1</param>
        </command_interface>
        <state_interface name="position" />
        <state_interface name="velocity" />
      </joint>
      <joint name="base_front_left_wheel_joint">
        <command_interface name="velocity">
          <param name="min">-1</param>
          <param name="max">1</param>
        </command_interface>
        <state_interface name="position" />
        <state_interface name="velocity" />
      </joint>
      <joint name="base_rear_right_wheel_joint">
        <command_interface name="velocity">
          <param name="min">-1</param>
          <param name="max">1</param>
        </command_interface>
        <state_interface name="position" />
        <state_interface name="velocity" />
      </joint>
      <joint name="base_rear_left_wheel_joint">
        <command_interface name="velocity">
          <param name="min">-1</param>
          <param name="max">1</param>
        </command_interface>
        <state_interface name="position" />
        <state_interface name="velocity" />
      </joint>
      <joint name="base_bucket_joint">
        <command_interface name="position">
          <param name="min">-0.75</param>
          <param name="max">0.75</param>
        </command_interface>
        <state_interface name="position">
          <param name="initial_value">-0.2</param>
        </state_interface>
        <state_interface name="velocity" />
      </joint>
    </ros2_control>
  </xacro:if>
</robot>